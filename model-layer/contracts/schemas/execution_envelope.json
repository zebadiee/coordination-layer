{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Execution Envelope",
  "type": "object",
  "required": ["plan_id", "envelope_id", "steps"],
  "properties": {
    "plan_id": {"type": "string"},
    "envelope_id": {"type": "string"},
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "adapter"],
        "properties": {
          "id": {"type": "string"},
          "type": {"type": "string"},
          "adapter": {"type": "string"},
          "payload": {}
        }
      }
    }
  }
}
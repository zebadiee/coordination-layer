{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Execution Trace",
  "type": "object",
  "required": ["envelope_id", "plan_id", "steps"],
  "properties": {
    "envelope_id": {"type": "string"},
    "plan_id": {"type": "string"},
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "status", "duration_ms"],
        "properties": {
          "id": {"type": "string"},
          "status": {"type": "string"},
          "duration_ms": {"type": "integer"},
          "result": {},
          "group": {"type": "string"}
        }
      }
    },
    "quorum": {
      "type": "object",
      "patternProperties": {
        "^.*$": {"type": "boolean"}
      },
      "additionalProperties": false
    }
  }
}